<Window x:Class="FloatingReminder.FloatingNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FloatingReminder"
        Title="Floating Note"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        WindowState="Maximized"
        ShowInTaskbar="False"
        IsManipulationEnabled="True"
        ManipulationDelta="Window_ManipulationDelta"
        PreviewMouseWheel="Window_PreviewMouseWheel">

    <Window.Resources>
        <DropShadowEffect x:Key="SilverGlow"
                          Color="Silver"
                          BlurRadius="6"
                          ShadowDepth="0"
                          Opacity="0.5"/>

        <local:HalfSizeConverter x:Key="HalfSizeConverter" />

        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeThickness="{TemplateBinding BorderThickness}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border x:Name="TextArea" Background="Transparent"
                MouseLeftButtonDown="TextArea_MouseLeftButtonDown"
                MouseMove="TextArea_MouseMove"
                MouseLeftButtonUp="TextArea_MouseLeftButtonUp">

            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="DragTranslate" />
                </Grid.RenderTransform>

                <TextBlock x:Name="ReminderText"
                           Text="Your Text Here"
                           FontSize="60"
                           Foreground="White" />
                <Border x:Name="ButtonHitbox"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        Margin="-15, -15, -15, -15"
                        Padding="20"
                        MouseEnter="ButtonHitbox_MouseEnter"
                        MouseLeave="ButtonHitbox_MouseLeave">

                    <Button x:Name="CloseButton"
                            Content="×"
                            Width="36"
                            Height="36"
                            FontWeight="Bold"
                            FontSize="18"
                            Background="#33FFFFFF"
                            Foreground="White"
                            BorderBrush="White"
                            BorderThickness="1"
                            Cursor="Hand"
                            Opacity="0"
                            Click="CloseButton_Click"
                            Style="{StaticResource CircleButtonStyle}">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="3" Opacity="0.3" ShadowDepth="0"/>
                        </Button.Effect>
                    </Button>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>