<Window x:Class="FloatingNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloatingNote"
        mc:Ignorable="d"
        Title="Floating Note Dashboard" 
        Height="480" Width="400"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        ShowInTaskbar="False">
    <!-- 
    NOTE: ShowInTaskbar="False" is critical. 
    This window will only be accessible via the system tray icon.
    -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Text="Configure your floating note. It will update when you click 'Start / Update'."
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"
                   Opacity="0.7"/>

        <!-- 1. Text Array Input -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="_Messages (one per line):" Target="{Binding ElementName=TextArrayInput}"/>
            <TextBox x:Name="TextArrayInput"
                     Grid.Row="1"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Padding="5"
                     BorderThickness="1"
                     BorderBrush="#CCC"
                     Text="Take a deep breath 💨&#x0a;You are doing great 💪&#x0a;Stay focused 🎯"
                     FontFamily="Segoe UI"/>
        </Grid>

        <!-- 2. Other Settings -->
        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <!-- Time Interval -->
            <Label Content="_Interval (seconds):" Target="{Binding ElementName=IntervalInput}"/>
            <TextBox x:Name="IntervalInput"
                     Text="5"
                     Padding="5"
                     BorderThickness="1"
                     BorderBrush="#CCC"
                     Width="80"
                     HorizontalAlignment="Left"/>

            <!-- Font Size -->
            <Label Content="_Start Font Size:" Target="{Binding ElementName=FontSizeInput}" Margin="0,10,0,0"/>
            <TextBox x:Name="FontSizeInput"
                     Text="60"
                     Padding="5"
                     BorderThickness="1"
                     BorderBrush="#CCC"
                     Width="80"
                     HorizontalAlignment="Left"/>

            <!-- Glow Toggle -->
            <CheckBox x:Name="GlowCheckBox"
                      Content="Enable Text _Glow"
                      IsChecked="True"
                      Margin="0,15,0,0"/>
        </StackPanel>

        <!-- Error Message -->
        <TextBlock x:Name="ErrorText"
                   Grid.Row="3"
                   Foreground="Red"
                   Margin="0,10,0,0"
                   FontWeight="Bold"
                   Visibility="Collapsed"/>

        <!-- Start Button -->
        <Button x:Name="StartButton"
                Grid.Row="4"
                Content="Start / Update Note"
                Padding="10,8"
                FontWeight="Bold"
                Margin="0,20,0,0"
                HorizontalAlignment="Stretch"
                Background="#007ACC"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Click="StartButton_Click"/>

        <!-- Exit App Button -->
        <Button x:Name="ExitButton"
                Grid.Row="5"
                Content="Exit Application"
                Padding="8,5"
                Margin="0,5,0,0"
                HorizontalAlignment="Center"
                Background="Transparent"
                Foreground="#888"
                BorderThickness="0"
                Cursor="Hand"
                Click="ExitButton_Click"/>
    </Grid>
</Window>