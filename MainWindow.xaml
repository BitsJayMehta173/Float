<Window x:Class="FloatingNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Floating Note"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        WindowState="Maximized"
        PreviewMouseWheel="Window_PreviewMouseWheel"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <!-- subtle silver text glow -->
        <DropShadowEffect x:Key="SilverGlow"
                          Color="Silver"
                          BlurRadius="6"
                          ShadowDepth="0"
                          Opacity="0.5"/>

        <!-- round button template -->
        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeThickness="{TemplateBinding BorderThickness}"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- full-screen container -->
    <Grid x:Name="RootGrid"
          Background="Transparent"
          MouseEnter="Grid_MouseEnter"
          MouseLeave="Grid_MouseLeave">

        <!-- draggable text area -->
        <Border x:Name="TextArea"
                Background="Transparent"
                MouseLeftButtonDown="TextArea_MouseLeftButtonDown"
                MouseMove="TextArea_MouseMove"
                MouseLeftButtonUp="TextArea_MouseLeftButtonUp">

            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- the floating text -->
                <TextBlock x:Name="ReminderText"
                           Text="Take a deep breath 💨"
                           Foreground="White"
                           FontSize="60"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Effect="{StaticResource SilverGlow}" />

                <!-- close button (size will be set from code) -->
                <Button x:Name="CloseButton"
                        Content="×"
                        Width="36"
                        Height="36"
                        FontWeight="Bold"
                        FontSize="18"
                        Background="#33FFFFFF"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="1"
                        Cursor="Hand"
                        Visibility="Collapsed"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="10"
                        Style="{StaticResource CircleButtonStyle}">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="3" Opacity="0.3" ShadowDepth="0"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
