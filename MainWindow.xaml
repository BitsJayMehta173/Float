<Window x:Class="FloatingReminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloatingReminder"
        mc:Ignorable="d"
        Title="Note Dashboard" 
        Height="650" Width="450"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        
        ShowInTaskbar="False"
        Foreground="White">

    <!-- Resources are in App.xaml -->
    <Window.Resources>
    </Window.Resources>

    <Border Background="{StaticResource DashboardBackgroundBrush}" CornerRadius="10" 
            BorderBrush="#33FFFFFF" BorderThickness="1" 
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="10,10,10,0">
                <TextBlock x:Name="TitleText" Text="Dashboard" 
                           FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="ChangeBgButton" Content="🎨" 
                            Style="{StaticResource GlassButton}" Padding="8,5"
                            Click="ChangeBgButton_Click"/>
                    <Button x:Name="LogoutButton" Content="⏏" 
                            ToolTip="Logout"
                            FontWeight="Bold"
                            Style="{StaticResource GlassButton}" Padding="10,5"
                            Margin="5,0,0,0"
                            Click="LogoutButton_Click"/>
                    <Button x:Name="CloseButton" Content="✕" 
                            ToolTip="Minimize to Tray"
                            Style="{StaticResource GlassButton}" Padding="10,5"
                            Margin="5,0,0,0"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>


            <TabControl x:Name="MainTabControl" Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="10">
                <!-- TabControl Resources -->
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="10,8">
                                        <TextBlock Text="{TemplateBinding Header}" Foreground="#AAFFFFFF"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#87CEEB"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- COLLECTIONS TAB -->
                <TabItem x:Name="CollectionsTab" Header="Collections" IsSelected="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Style="{StaticResource GlassBorder}">
                            <ListView x:Name="CollectionsListView" ItemsSource="{Binding Collections}" 
                                      Background="Transparent" BorderThickness="0" 
                                      Foreground="White"
                                      SelectionChanged="CollectionsListView_SelectionChanged">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#22FFFFFF" BorderThickness="0,0,0,1" Padding="5" Width="370">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Title}" FontSize="14" 
                                                               FontWeight="Bold"
                                                               TextTrimming="CharacterEllipsis" 
                                                               TextWrapping="NoWrap"
                                                               Margin="0,0,5,0"/>

                                                    <TextBlock Text="{Binding OwnerUsername, StringFormat='(from {0})'}" 
                                                               FontSize="10" Foreground="#AAFFFFFF"
                                                               TextTrimming="CharacterEllipsis" 
                                                               TextWrapping="NoWrap"
                                                               Margin="0,0,5,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsOwnedByCurrentUser}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button x:Name="OpenCollectionButton" Content="Open"
                                                            Foreground="#90EE90"
                                                            Style="{StaticResource GlassButton}" Padding="10,5"
                                                            Tag="{Binding}" Click="OpenCollectionButton_Click"/>
                                                    <Button x:Name="CopyCollectionButton" 
                                                            Content="Copy"
                                                            ToolTip="Make a private copy"
                                                            Style="{StaticResource GlassButton}" Padding="10,5"
                                                            Foreground="#FFD700" Margin="5,0,0,0"
                                                            Tag="{Binding}" 
                                                            Click="CopyCollectionButton_Click"/>
                                                    <Button x:Name="ShareCollectionButton" 
                                                            Content="Invite"
                                                            Style="{StaticResource GlassButton}" Padding="10,5"
                                                            Foreground="#87CEEB" Margin="5,0,0,0"
                                                            Tag="{Binding}" 
                                                            Click="ShareCollectionButton_Click"
                                                            IsEnabled="{Binding IsOwnedByCurrentUser}"/>
                                                    <Button x:Name="DeleteCollection" Content="Delete" 
                                                            Foreground="#FF6B6B" Margin="5,0,0,0"
                                                            Style="{StaticResource GlassButton}" Padding="10,5"
                                                            Tag="{Binding}" Click="DeleteCollection_Click"
                                                            IsEnabled="{Binding IsOwnedByCurrentUser}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>

                        <Grid Grid.Row="1" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="NewColTextBox" Grid.Column="0" Margin="0,0,10,0"
                                     Text="New collection title..." Foreground="#AAFFFFFF"
                                     Background="#11FFFFFF" BorderThickness="0" Padding="10"
                                     VerticalContentAlignment="Center" GotFocus="NewItemTextBox_GotFocus" LostFocus="NewItemTextBox_LostFocus"/>
                            <Button x:Name="AddNewCollectionButton" Grid.Column="1" Content="Add New" 
                                    Style="{StaticResource PrimaryButton}"
                                    Click="AddNewCollection_Click"/>
                        </Grid>
                    </Grid>
                </TabItem>

                <!-- FRIENDS TAB -->
                <TabItem Header="Friends">
                    <TabControl Background="Transparent" BorderThickness="0">
                        <TabItem Header="Add Friend">
                            <StackPanel Margin="10">
                                <TextBlock Text="Enter a username to send a friend request:" TextWrapping="Wrap"/>
                                <TextBox x:Name="FriendUsernameTextBox" Margin="0,10,0,0"
                                         Background="#11FFFFFF" BorderThickness="0" Padding="10"
                                         VerticalContentAlignment="Center" Foreground="White"/>
                                <Button x:Name="AddFriendButton" Content="Send Request" 
                                        Style="{StaticResource PrimaryButton}" Margin="0,15,0,0"
                                        Click="AddFriendButton_Click"/>
                            </StackPanel>
                        </TabItem>
                        <TabItem x:Name="PendingRequestsTab" Header="Pending Requests">
                            <Border Style="{StaticResource GlassBorder}">
                                <ListView x:Name="PendingRequestsListView" ItemsSource="{Binding PendingRequests}" 
                                          Background="Transparent" BorderThickness="0" 
                                          Foreground="White">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#22FFFFFF" BorderThickness="0,0,0,1" Padding="5" Width="360">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding SenderUsername}" 
                                                               VerticalAlignment="Center" FontWeight="Bold"
                                                               TextTrimming="CharacterEllipsis" 
                                                               TextWrapping="NoWrap"/>

                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <Button x:Name="AcceptButton" Content="Accept"
                                                                Foreground="#90EE90"
                                                                Style="{StaticResource GlassButton}" Padding="10,5"
                                                                Tag="{Binding}" Click="AcceptButton_Click"/>
                                                        <Button x:Name="DeclineButton" Content="Decline" 
                                                                Foreground="#FF6B6B" Margin="5,0,0,0"
                                                                Style="{StaticResource GlassButton}" Padding="10,5"
                                                                Tag="{Binding}" Click="DeclineButton_Click"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </TabItem>
                    </TabControl>
                </TabItem>

                <!-- REMINDERS TAB (MODIFIED) -->
                <TabItem x:Name="RemindersTab" Header="Reminders" Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="BackToCollectionsButton" 
                                    Content="&lt; Back to Collections"
                                    Style="{StaticResource GlassButton}"
                                    HorizontalAlignment="Left"
                                    Padding="10,5" Foreground="#87CEEB"
                                    Click="BackToCollections_Click"/>
                            <Button x:Name="LaunchFloatWindowButton" 
                                    Content="Launch Float Window"
                                    Style="{StaticResource GlassButton}"
                                    HorizontalAlignment="Left" Margin="10,0,0,0"
                                    Padding="10,5" Foreground="#90EE90"
                                    Click="LaunchFloatWindow_Click"/>
                        </StackPanel>

                        <Border Grid.Row="1" Style="{StaticResource GlassBorder}">
                            <ListView x:Name="RemindersListView" ItemsSource="{Binding Reminders}" 
                                      Background="Transparent" BorderThickness="0" 
                                      Foreground="White">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#22FFFFFF" BorderThickness="0,0,0,1" Padding="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0">
                                                    <!-- Main Reminder Text -->
                                                    <TextBlock Text="{Binding Message}" 
                                                               TextWrapping="NoWrap" 
                                                               TextTrimming="CharacterEllipsis"
                                                               FontSize="14"/>

                                                    <!-- *** NEW: Metadata TextBlock *** -->
                                                    <TextBlock FontSize="10" Foreground="#AAFFFFFF" Margin="0,2,0,0">
                                                        <Run Text="Added by"/>
                                                        <Run Text="{Binding OwnerUsername, FallbackValue='unknown'}" FontWeight="SemiBold"/>
                                                        <Run Text="on"/>
                                                        <Run Text="{Binding CreatedAt, StringFormat='MMM d, yyyy'}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Button StackPanel -->
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <!-- *** NEW: Edit Button *** -->
                                                    <Button x:Name="EditItemButton" Content="Edit" 
                                                            Foreground="#FFD700"
                                                            Style="{StaticResource GlassButton}" Padding="10,5"
                                                            Tag="{Binding}" Click="EditItemButton_Click"/>

                                                    <Button x:Name="DeleteItem" Content="Delete" 
                                                            Foreground="#FF6B6B" Margin="5,0,0,0"
                                                            Style="{StaticResource GlassButton}" Padding="10,5"
                                                            Tag="{Binding}" Click="DeleteItem_Click"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>

                        <!-- *** MODIFIED: Add/Edit Item Grid *** -->
                        <Grid Grid.Row="2" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <!-- New column for Cancel -->
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="NewItemTextBox" Grid.Column="0" Margin="0,0,10,0"
                                     Text="New reminder..." Foreground="#AAFFFFFF"
                                     Background="#11FFFFFF" BorderThickness="0" Padding="10"
                                     VerticalContentAlignment="Center" GotFocus="NewItemTextBox_GotFocus" LostFocus="NewItemTextBox_LostFocus"/>

                            <!-- This button now says "Add Item" or "Save Item" -->
                            <Button x:Name="SaveItemButton" Grid.Column="1" Content="Add Item" 
                                    Style="{StaticResource PrimaryButton}"
                                    Click="SaveItemButton_Click"/>

                            <!-- *** NEW: Cancel Edit Button (hidden by default) *** -->
                            <Button x:Name="CancelEditButton" Grid.Column="2" Content="Cancel" 
                                    Style="{StaticResource GlassButton}"
                                    Foreground="#FF6B6B" Margin="5,0,0,0"
                                    Visibility="Collapsed"
                                    Click="CancelEditButton_Click"/>
                        </Grid>
                    </Grid>
                </TabItem>

            </TabControl>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#11FFFFFF" Padding="10,5" CornerRadius="0,0,10,10">
                <TextBlock x:Name="SyncStatusText" Text="Loading..." 
                           Foreground="#AAFFFFFF" FontSize="11"
                           HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>