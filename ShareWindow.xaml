<Window x:Class="FloatingReminder.ShareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloatingReminder"
        mc:Ignorable="d"
        Title="Invite Friends" 
        Height="450" Width="350"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Foreground="White">

    <Border Background="{StaticResource DashboardBackgroundBrush}" CornerRadius="10" 
            BorderBrush="#33FFFFFF" BorderThickness="1" 
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid>
            <Grid VerticalAlignment="Top" Margin="10,10,10,0">
                <TextBlock Text="Invite Friends" 
                           FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                <Button x:Name="CloseButton" Content="✕" 
                        Style="{StaticResource GlassButton}" Padding="10,5"
                        HorizontalAlignment="Right"
                        Click="CloseButton_Click"/>
            </Grid>

            <StackPanel Margin="20,60,20,20">
                <TextBlock Text="Select friends to invite to this collection:"
                           TextWrapping="Wrap"/>

                <TextBlock x:Name="CollectionNameText" Text="Collection: '...'" 
                           FontWeight="Bold" Margin="0,10,0,0"/>

                <Border Style="{StaticResource GlassBorder}" Margin="0,15,0,0" Height="200">
                    <ListBox x:Name="FriendsListBox" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Username}" 
                                          IsChecked="{Binding IsInvited}" 
                                          IsEnabled="{Binding CanInvite}"
                                          Foreground="White"
                                          Margin="5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>


                <TextBlock x:Name="ErrorText" Foreground="#FF6B6B" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,10,0,0" 
                           TextWrapping="Wrap" Visibility="Collapsed"/>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="CancelButton" Grid.Column="0" Content="Cancel" 
                            Style="{StaticResource GlassButton}" 
                            Padding="10,8" Margin="0,0,5,0"
                            Foreground="#AAFFFFFF"
                            Click="CloseButton_Click"/>

                    <Button x:Name="SendButton" Grid.Column="1" Content="Update Invites" 
                            Style="{StaticResource PrimaryButton}" 
                            Margin="5,0,0,0"
                            Click="SendButton_Click"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>